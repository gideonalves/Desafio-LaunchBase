{% extends "layout.njk" %}

{% block content %}



    
    <form class="card" method="POST" action="/instructors">

        <section
         class="avatar" 
        style="background: url(https://source.unsplash.com/collection/1361815/500x500) no-repeat center center/cover">
        </section>
        <section class="details">

            <h3>Cadastro de Professor</h3>

            <div class="item">
                <div>avatar</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" placeholder="Nome completo">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <!-- O segundo valor estará selecionado inicialmente -->
                <div>Grau de escolaridade</div>    
                   <div>
                       <!-- O segundo valor estará selecionado inicialmente -->
                        <select name="select">
                            <option value="EMC">Ensino Médio Completo</option>
                            <option value="SC" selected>Superior Completo</option>
                            <option value="MD">Mestrado e Doutorado</option>
                        </select>
                   </div>
                </div>
            </div>

                 <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span>
                        <input type="radio" name="gender" value="P" checked>Presencial
                    </span>
                    <span>
                        <input type="radio" name="gender" value="D">Á distância
                    </span>
                </div>
            </div>

            <div class="item">
                <div>Area de atuação</div>
                <div>
                    <input type="text" name="services" placeholder="Separe as Matéiras separado virgula">
                </div>
            </div>

           <button type="submit">Salvar</button>

        </section>       
    </form>

{% endblock %}