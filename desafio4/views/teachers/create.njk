{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/teachers">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/1361815/500x500) no-repeat center center/cover"></section>

        <section class="details">
            <h3>Novo Professor</h3>

            <div class="item">
                <div>avatar URL</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://">
                </div>
            </div>

            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" name="name" placeholder="Digite seu nome">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" name="birth">
                </div>
            </div>

            <div class="item">
                <div>
                    Grau de escolaridade</div>
                <div>
                    <!-- O segundo valor estará selecionado inicialmente -->
                    <select name="select">
                        <option value="medio">Ensino Médio Completo</option>
                        <option value="superior" selected="selected">Ensino Superior Completo</option>
                        <option value="MestEdot">Mestrado e Doutorado</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <span><input type="radio" name="gender" value="psc" checked="checked">Presencial</span>
                <span><input type="radio" name="gender" value="dtn">Á distância</span>
            </div>

            <div class="item">
                <div>Area de atuação</div>
                <div>
                    <input type="text" name="subjects_taught" placeholder="Separe as Matéiras por virgula">
                </div>
            </div>

            <button type="submit">Salvar</button>

        </section>
    </form>

{% endblock %}