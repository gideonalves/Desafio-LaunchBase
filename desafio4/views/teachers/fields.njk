<div class="item">
                <div>avatar URL</div>
                <div>
                    <input type="url" 
                    name="avatar_url" 
                    placeholder="http://" 
                    value="{{ teacher.avatar_url }}">
                </div>
            </div>

            <div class="item">
                <div>Nome completo</div>
                <div>
                    <input type="text" 
                    name="name" 
                    placeholder="Digite seu nome"
                    value="{{ teacher.name }}">
                </div>
            </div>

            <div class="item">
                <div>Data de nascimento</div>
                <div>
                    <input type="date" 
                    name="birth"
                    value="{{ teacher.birth }}">
                </div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>
                    <select name="education_level">
                        <option value="EM" {% if teacher.graduation == "EM" %} selected {% endif %}>
                            Ensino Médio Completo
                        </option>
                        <option value="ES" {% if teacher.graduation == "ES" %} selected {% endif %}>
                            Ensino Superior Completo
                        </option>
                        <option value="M" {% if teacher.graduation == "M" %} selected {% endif %}>
                            Mestrado
                        </option>
                        <option value="D" {% if teacher.graduation == "D" %} selected {% endif %}>
                            Doutorado
                        </option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <span>
                    <input type="radio" 
                    name="class_type" 
                    value="P" 
                    {% if teacher.class_type == "P" %}
                    checked
                    {% endif %}>Presencial
                </span>

                <span>
                    <input type="radio"
                     name="class_type"
                      value="D"
                      {% if teacher.class_type == "D" %}
                    checked
                    {% endif %}>Á distância
                </span>
            </div>

            <div class="item">
                <div>Area de atuação</div>
                <div>
                    <input type="text" name="subjects_taught" placeholder="Separe as Matéiras por virgula"
                    value="{{ teacher.subjects_taught }}">
                </div>
            </div>

            <button type="submit">Salvar</button>